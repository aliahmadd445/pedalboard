{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "globals": {
        "describe": true,
        "it": true,
        "expect": true,
        "jest": true
    },
    "plugins": ["@pedalboard/craftsmanlint"],
    "rules": {
        "@pedalboard/craftsmanlint/no-namespace-imports": ["error"]
    }
}
